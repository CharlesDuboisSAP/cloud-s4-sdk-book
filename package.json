  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.15.5",
    "uuid": "^3.2.1"
  },
  "engines": {
    "node": "^8.9.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/uuid": "^3.4.3",
    "copyfiles": "^2.0.0",
    "typescript": "^3.0.1"
  }
}
