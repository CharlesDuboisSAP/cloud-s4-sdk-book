{
  "name": "bupa-mock-odata",
  "version": "1.0.0",
  "description": "OData mock service for Business Partner API of SAP S/4HANA Cloud",
  "main": "dist/app.js",
  "scripts": {
    "start": "npm build && node dist/app.js",
    "build": "npm run copy-edmx && tsc",
    "watch": "npm run copy-edmx && tsc -w",
    "copy-edmx": "copyfiles -u 1 \"src/**/*.edmx\" dist/"
